@model DisplayAndEditorTemplate.Models.Student

<style>
    .table tr > td:first-child {
        font-weight: bold;
    }
</style>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <td>Student No</td>
        <td>@Model.StudentId</td>
    </tr>
    <tr>
        <td>Full Name</td>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <td>Date of Birth</td>
        <td>
            @Html.DisplayFor(t=>t.BirthDate)
        </td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(t=>t.IsGraduate)</td>
        <td>@Html.DisplayTextFor(t => t.IsGraduate)</td>
    </tr>
    <tr>
        <td>Country</td>
        <td>@ViewData["country"]</td>
    </tr>
    <tr>
        <td>City</td>
        <td>@ViewBag.city</td>
    </tr>
</table>
