@model AuthorizeSample.Models.User

@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                
                @if (ViewBag.Warn != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Warn</div>
                }

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>UserName</label>
                        @Html.TextBoxFor(t => t.UserName, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.PasswordFor(t => t.Password, new {@class = "form-control"})
                    </div>
                    <button class="btn btn-default pull-right">Login</button>
                }
            </div>
        </div>
    </div>
</div>
