@model ProductIndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("MultipleAction", "Product"))
{
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Quantity Per Unit</th>
                <th>Units In Stock</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><input type="checkbox" name="ids" value="@product.ProductId"/></td>
                    <td>@product.ProductName</td>
                    <td>@product.Category.CategoryName</td>
                    <td>@product.QuantityPerUnit</td>
                    <td>@product.UnitsInStock</td>
                    <td>@product.UnitPrice</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">
                    <input type="submit" name="export" value="Export" class="btn btn-info"/>
                    <input type="submit" name="delete" value="Delete" class="btn btn-danger pull-right" onclick="return confirm('Are you sure?');"/>
                </td>
            </tr>
        </tfoot>
    </table>
}




