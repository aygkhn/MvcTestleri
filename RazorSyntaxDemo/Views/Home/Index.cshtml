@{
    Layout = null;
}

@{
    var a = 6;
    var b = 10;

    var numbers = new List<int> { 1, 2, 3, 5 };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .red {
            color: red;
        }

        .blue {
            color: blue;
        }
    </style>
</head>
    <body>
        
        @{
            var cssClass = b%a == 0 ? "red" : "blue";   
        }

        <div class="@cssClass">
            @a
            <br />
            @b
            <br />
            @foreach (var number in numbers)
            {
                @number
                <br />
            }

            @for (int i = 0; i < 3; i++)
            {
            @*<text>salih</text>*@
                @:salih
            }
        
            @if (true)
            {
                var total = a + b;
            
                <div>@total</div> 
            }
        
            <br/>
            Total: @(a+b)
            <br/>
            salih@goliq.net
            <br/>
            salih@(a)
        </div>
    </body>
</html>
